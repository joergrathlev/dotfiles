[include]
	path = ~/.gitconfig_local
[pretty]
	concise = %C(yellow)%h%C(reset) %s (%an, %ar) %C(bold blue)%d%C(reset)
[alias]
	s = status
	l = log --pretty=concise -n 20
	lg = log --pretty=concise -n 20 --graph --all
	ci = commit
	co = checkout
	amend = commit --amend -C HEAD
	tidy = rebase -i @{upstream}
	recent = for-each-ref --count=5 --sort=-committerdate refs/heads/ --format='%(HEAD)%(refname:short) %(color:dim)(%(authorname), %(creatordate:relative))%(color:reset)'
	recap = !git log -n20 --all --pretty=concise --no-merges --author=$(git config --get user.email)
	behind = log --pretty=concise HEAD..@{upstream}
	ahead = log --pretty=concise @{upstream}..HEAD
	root = rev-parse --show-toplevel
[advice]
	pushNonFastForward = false
[push]
	default = upstream
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore_global
[pull]
	rebase = preserve
[diff]
	compactionHeuristic = true
[pager]
	show = $(brew --prefix git)/share/git-core/contrib/diff-highlight/diff-highlight | less
	log = $(brew --prefix git)/share/git-core/contrib/diff-highlight/diff-highlight | less
	diff = $(brew --prefix git)/share/git-core/contrib/diff-highlight/diff-highlight | less
[interactive]
	diffFilter = $(brew --prefix git)/share/git-core/contrib/diff-highlight/diff-highlight | less
